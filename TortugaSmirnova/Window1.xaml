<Window x:Class="TortugaSmirnova.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TortugaSmirnova"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Button
            Width="200"
            Height="200"
            Margin="0 10 5 0" Background="White" BorderBrush="{x:Null}">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                >
                <Image Source="/themanburger.png"
                   Height="120"
                   ></Image>
                <TextBlock
                    Text="Бургер для мужиков"
                    FontSize="25" Foreground="#FF292929"
                    Margin="0 0 0 0"
                    TextWrapping="Wrap" 
                    TextAlignment="Center"
                    />
            </StackPanel>
        </Button>
    </Grid>
</Window>
